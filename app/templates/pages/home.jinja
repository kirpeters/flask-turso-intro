{% extends 'pages/base.jinja' %}

{% block title %}

    Flask and Supabase Demo

{% endblock %}


{% block content %}

    <section id="hero">
        <h1>Flask and Supabase Demo</h1>
    </section>

    <section id="things">

        {% for thing in things %}

            <article>

                <header>
                    <h4>{{ thing.name }}</h4>
                </header>

                <p>{{ thing.description }}</p>

                <footer>
                    <a href="/thing.id }}">More...</a>

                    <a href="/delete.id}}">Delete</a>
                </footer>

            </article>

        {% endfor %}

    </section>

    <section>
    <article> 
    <form>
    <label>
    name<input type="text" name="name">
    </label>
    <button>Add new things</button>
    </form>
    </article>
    </section>

{% endblock %}
